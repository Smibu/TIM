{
  "compilerOptions": {
    "module": "system",
    "strict": true,
    "allowUnreachableCode": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "build-ide",
    "moduleResolution": "node",
    "baseUrl": ".",
    "composite": true,
    "paths": {
    },
    "target": "es5",
    "lib": [
      "dom",
      "es2017",
      "scripthost",
      "dom.iterable"
    ],
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "noEmit": false,
    "declarationDir": "decls",
    "declaration": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "alwaysShowRuleFailuresAsWarnings": false
      }
    ]
  },
  "exclude": [
    "node_modules",
    "jspm_packages",
    "bower_components",
    "build",
    "build-ide",
    "decls"
  ]
}
